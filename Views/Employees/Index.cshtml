@model IEnumerable<EPMSAppDemo.Models.Employee>


@{
    ViewBag.Title = "Index";
}

@foreach (var item in Model.Take(1))
{
<h2>@Html.DisplayFor(m => item.Team1.TeamName) Employees</h2>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>




<style>
    .paginate_button {
        cursor: pointer;
        font-size: large;
        color: black;
    }

    th {
        cursor: pointer;
    }
</style>

<!-- DataTables CSS -->
